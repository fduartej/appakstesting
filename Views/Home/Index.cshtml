@{
    ViewData["Title"] = "Database Test API";
}

<div class="text-center">
    <h1 class="display-4">Database Test API</h1>
    <p class="lead">API para probar conectividad a SQL Server (on-premise o Azure SQL)</p>
</div>

<!-- Database Test Form -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-database"></i> Probar Conexión a Base de Datos</h5>
                </div>
                <div class="card-body">
                    <form id="databaseTestForm">
                        <div class="mb-3">
                            <label for="connectionString" class="form-label">Cadena de Conexión *</label>
                            <textarea class="form-control" id="connectionString" name="connectionString" rows="3" 
                                placeholder="Ejemplo: Server=your-server;Database=your-database;User Id=username;Password=password;TrustServerCertificate=true;" required></textarea>
                            <div class="form-text">Ingresa la cadena de conexión para SQL Server (on-premise o Azure SQL)</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="customQuery" class="form-label">Consulta Personalizada (Opcional)</label>
                            <textarea class="form-control" id="customQuery" name="customQuery" rows="2" 
                                placeholder="SELECT COUNT(*) FROM YourTable"></textarea>
                            <div class="form-text">Opcional: Ejecutar una consulta SQL personalizada</div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-secondary me-md-2" onclick="loadExample()">
                                <i class="fas fa-lightbulb"></i> Cargar Ejemplo
                            </button>
                            <button type="submit" class="btn btn-primary" id="testButton">
                                <i class="fas fa-play"></i> Probar Conexión
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Loading Spinner -->
    <div class="row mt-3" id="loadingSpinner" style="display: none;">
        <div class="col-12 text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Probando conexión...</span>
            </div>
            <p class="mt-2">Probando conexión a la base de datos...</p>
        </div>
    </div>
    
    <!-- Results Section -->
    <div class="row mt-4" id="resultsSection" style="display: none;">
        <div class="col-md-8 mx-auto">
            <div class="card" id="resultsCard">
                <div class="card-header">
                    <h5><i class="fas fa-chart-line"></i> Resultados de la Prueba</h5>
                </div>
                <div class="card-body" id="resultsBody">
                    <!-- Results will be populated here -->
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-database"></i> API Documentation</h5>
                </div>
                <div class="card-body">
                    <p>Explore the API using Swagger UI:</p>
                    <a href="@ViewBag.SwaggerUrl" class="btn btn-primary" target="_blank">
                        <i class="fas fa-external-link-alt"></i> Open Swagger UI
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-code"></i> API Endpoints</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><strong>POST</strong> <code>@ViewBag.ApiBaseUrl/test-connection</code> - Test database connectivity</li>
                        <li><strong>GET</strong> <code>@ViewBag.ApiBaseUrl/health</code> - API health check</li>
                        <li><strong>GET</strong> <code>@ViewBag.ApiBaseUrl/connection-examples</code> - Example connection strings</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Supported Database Types</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>SQL Server On-Premise</h6>
                            <ul>
                                <li>SQL Authentication</li>
                                <li>Windows Authentication</li>
                                <li>Custom Port Support</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Azure SQL</h6>
                            <ul>
                                <li>Azure SQL Database</li>
                                <li>Azure SQL Managed Instance</li>
                                <li>Connection Encryption</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load example connection string
        function loadExample() {
            document.getElementById('connectionString').value = 'Server=localhost;Database=TestDB;User Id=testuser;Password=testpass;TrustServerCertificate=true;';
            document.getElementById('customQuery').value = 'SELECT COUNT(*) as TotalRecords FROM INFORMATION_SCHEMA.TABLES';
        }

        // Handle form submission
        document.getElementById('databaseTestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const connectionString = document.getElementById('connectionString').value.trim();
            const customQuery = document.getElementById('customQuery').value.trim();
            
            if (!connectionString) {
                alert('Por favor ingresa una cadena de conexión.');
                return;
            }
            
            // Show loading spinner
            document.getElementById('loadingSpinner').style.display = 'block';
            document.getElementById('resultsSection').style.display = 'none';
            document.getElementById('testButton').disabled = true;
            
            try {
                const requestBody = {
                    connectionString: connectionString
                };
                
                if (customQuery) {
                    requestBody.customQuery = customQuery;
                }
                
                const response = await fetch('/api/DatabaseTest/test-connection', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requestBody)
                });
                
                const result = await response.json();
                displayResults(result);
                
            } catch (error) {
                displayError('Error de conexión: ' + error.message);
            } finally {
                // Hide loading spinner
                document.getElementById('loadingSpinner').style.display = 'none';
                document.getElementById('testButton').disabled = false;
            }
        });

        function displayResults(result) {
            const resultsBody = document.getElementById('resultsBody');
            const resultsCard = document.getElementById('resultsCard');
            
            if (result.isConnected) {
                resultsCard.className = 'card border-success';
                resultsBody.innerHTML = `
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> <strong>¡Conexión Exitosa!</strong>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Información del Servidor:</h6>
                            <ul class="list-unstyled">
                                <li><strong>Servidor:</strong> ${result.serverInfo || 'N/A'}</li>
                                <li><strong>Base de Datos:</strong> ${result.databaseName || 'N/A'}</li>
                                <li><strong>Fecha Actual:</strong> ${result.currentDate || 'N/A'}</li>
                                <li><strong>Timestamp:</strong> ${new Date(result.testTimestamp).toLocaleString()}</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            ${result.customQueryResult ? `
                                <h6>Resultado de Consulta Personalizada:</h6>
                                <div class="bg-light p-2 rounded">
                                    <code>${result.customQueryResult}</code>
                                </div>
                            ` : ''}
                        </div>
                    </div>
                `;
            } else {
                resultsCard.className = 'card border-danger';
                resultsBody.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> <strong>Error de Conexión</strong>
                    </div>
                    <div class="bg-light p-3 rounded">
                        <h6>Mensaje de Error:</h6>
                        <p class="text-danger mb-0">${result.errorMessage || 'Error desconocido'}</p>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">Timestamp: ${new Date(result.testTimestamp).toLocaleString()}</small>
                    </div>
                `;
            }
            
            document.getElementById('resultsSection').style.display = 'block';
        }

        function displayError(errorMessage) {
            const resultsBody = document.getElementById('resultsBody');
            const resultsCard = document.getElementById('resultsCard');
            
            resultsCard.className = 'card border-danger';
            resultsBody.innerHTML = `
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i> <strong>Error</strong>
                </div>
                <div class="bg-light p-3 rounded">
                    <p class="text-danger mb-0">${errorMessage}</p>
                </div>
            `;
            
            document.getElementById('resultsSection').style.display = 'block';
        }
    </script>
}
